{
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
      "stylelint-scss",
      "stylelint-order"
    ],
    "rules": {
      "color-hex-case": "lower",
      "max-nesting-depth": 5,
      "selector-class-pattern": "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$|^Mui.*$"
    },
    "ignoreFiles": [
      "build/*"
    ]
  }
